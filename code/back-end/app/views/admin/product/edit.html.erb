<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Product management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit product
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" method="post" enctype="multipart/form-data">
                            	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                                <div class="form-group">
                                    <label>Title</label>
                                    <input type="text" name="title" class="form-control" placeholder="Enter the title" value="<%= @product.title %>">
                                </div>
                                <div class="form-group">
                                    <label>Price (USD)</label>
                                    <input type="number" step="any" min="0" max="10000" name="price" class="form-control" placeholder="Enter the price" value="<%= @product.price %>">
                                </div>
                                <div class="form-group">
                                    <label>Sizes</label>
                                    <input type="text" name="sizes" class="form-control" placeholder="Enter the sizes" value="<%= @product.sizes %>">
                                </div>
                                <div class="form-group">
                                    <label>Thumbnails</label>
                                    <input name="thumbnails" type="file">
                                </div>
                                <div class="form-group">
                                    <label>Rating</label>
                                    <input type="number" step="any" min="0" max="5" name="rating" class="form-control" placeholder="Enter the rating" value="<%= @product.rating %>">
                                </div>
                                <% if @errors %>
                                <div class="form-group">
	                                <div class="alert alert-danger alert-dismissable">
	                                	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
	                               		<%= @errors %>
	                            	</div>
                            	</div>
                				<% end %> 
                                <button type="submit" class="btn btn-default">Save</button>
                                <a href="/admin/product" class="btn btn-default">Cancel</a>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->