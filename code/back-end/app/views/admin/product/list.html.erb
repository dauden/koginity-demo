<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Product management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="text-center">No.</th>
                                    <th class="text-center">Title</th>
                                    <th class="text-center">Thumbnail</th>
                                    <th class="text-center">Price</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            	<% @products.each_with_index do |product, index| %>
                                <tr class="odd gradeX">
                                    <td class="text-center"><%= (index + 1) %></td>
                                    <td><%= product.title %></td>
                                    <td class="text-center">
                                    	<% if product.thumbnail != nil %>
                                    	<img width="100px" src="/products/thumbnails/<%= product.thumbnail %>">
                                    	<% else %>
                                    		<img width="100px" src="/products/noimage.png">
                                    	<% end %>
                                    </td>
                                    <td class="text-right"><%= product.price %> USD</td>
                                    <td class="text-center">
                                    	<a href="/admin/product/edit/<%= product.id %>" class="btn btn-primary">
											<i class="fa fa-edit" aria-hidden="true"></i>
                                    	</a>
                                    	<a href="/admin/product/delete/<%= product.id %>" class="btn btn-primary">
                                    		<i class="fa fa-remove" aria-hidden="true"></i>
                                    	</a>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                        <div class="row">
                        	<div class="col-sm-12">
                        		<% if @errors %>
                                <div class="alert alert-danger alert-dismissable">
                                	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                               		<%= @errors %>
                            	</div>
                				<% end %> 
                        	</div>
                            <div class="col-sm-6">
                            	<a href="/admin/product/add" class="btn btn-primary">Add</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<!-- /#page-wrapper -->