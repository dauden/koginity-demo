<div class="container theme-showcase" >
    <div class="page-header">
        <div class="container-fluid">
           <div class="navbar-text navbar-right">
                <form class="form-inline" method="post">
                    <div class="row">
                        <div class="form-group form-group-sm form-search">
                            <label>Title</label>
                            <input type="text" class="form-control" name="title" placeholder="Title" value="<%= @title %>">
                            <label>Price</label>
                            <input type="number" class="form-control" name="price_from" placeholder="From" value="<%= @price_from %>">
                            <input type="number" class="form-control" name="price_to" placeholder="To" value="<%= @price_to %>">
                            <button type="submit" class="btn btn-default">Search</button>
                        </div>
                   </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <% @products.each_with_index do |product, index| %>
        <div class="product text-center col-xs-6 col-sm-4 col-md-3">
            <div class="img-thumbnail" >
                <a href="/product/<%= product.id %>" title="<%= product.title %>">
                    <img src="/products/thumbnails/<%= product.thumbnail %>"/>
                </a>
            </div>
            <div class="product-info">
                <a href="/product/<%= product.id %>" title="<%= product.title %>"><%= product.title %></a><br/>
                <span><%=  product.price %></span> USD
            </div>
             <div class="star-rating">
            <% for i in 0..5 %>
                <% 
                    @class_name = "-o"
                    if i < product.rating
                        @class_name = ""
                    elsif i < product.rating && (i + 0.5) >= product.rating
                        @class_name = "-half-o"
                    end
                 %>
                <i class="fa fa-star<%=  @class_name %>" aria-hidden="true"></i>
            <% end %>
            </div>
            <div class="container-fluid container-details" position-by-parent-offset>
                <div class="product-details">
                    <img class="img-details" src="/products/thumbnails/<%= product.thumbnail %>"/>
                    <div class="size-info">
                        <h3>AVALIBEL SIZE</h3>
                        <p>
                            <span><%= product.sizes %></span>
                        </p>
                    </div>
                    <div class="product-info">
                        <div class="star-rating">
                        <% for i in 0..5 %>
                            <% 
                                @class_name = "-o"
                                if i < product.rating
                                    @class_name = ""
                                elsif i < product.rating && (i + 0.5) >= product.rating
                                    @class_name = "-half-o"
                                end
                             %>
                            <i class="fa fa-star<%=  @class_name %>" aria-hidden="true"></i>
                        <% end %>
                        </div>
                        <div class="product-info">
                            <label title="<%= product.title %>"><%= product.title %></label><br/>
                            <span><%= product.price %></span> USD<br/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>